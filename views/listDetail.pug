extends layouts/main

block content
    .list__player
        video(src=`/${list.fileUrl}`, controls=true)
    .list__info
        a(href=routes.editList(list.id)) Edit list
        h5.list__title=list.title
        span.list__views=list.views
        p.list__description=list.description
    .list__comments 
        if list.comments.length === 1
            span.list__comment-number 1 comment 
        else 
            span.list__comment-number #{list.comments.length} comments